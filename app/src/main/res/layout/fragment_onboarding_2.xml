<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_onBoard2_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="0sp"
        android:fontFamily="@font/robotoregular"
        android:text="Experience \nlike never before"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="60sp"
        android:textSize="12sp"
        android:fontFamily="@font/poppinsregular"
        android:text="Get a rollercoster ride on our app. We are more then happy to announce a very valueable assest of ours. Welcome to the family"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_onBoard2_heading"/>
</androidx.constraintlayout.widget.ConstraintLayout>